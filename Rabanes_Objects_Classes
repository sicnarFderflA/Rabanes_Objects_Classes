import math

class Circle:
    def __init__(self, radius):
        self.radius = radius

    def area(self):
        CircleArea = math.pi * self.radius ** 2
        print(f"Area of the circle with radius {self.radius}: {CircleArea:.2f}")

    def perimeter(self):
        CirclePerimeter = 2 * math.pi * self.radius
        print(f"Perimeter of the circle with radius {self.radius}: {CirclePerimeter:.2f}")

radius = float(input("Enter Radius of the circle: "))
circle = Circle(radius)
circle.area()
circle.perimeter()